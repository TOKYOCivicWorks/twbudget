#treemap-root(ng-controller="BudgetItem")
  script(src="/staticjs/output.json")
  script(src="/staticjs/parse.js")
  script(src="/staticjs/treemap.js")
    alert("ok");
  #treemap-root-inner
    #debitmask 2,500億
  button#treemap-backbtn.btn
    i.icon-big-back
  #budget-unit
    .input-prepend.input-append
      span.add-on 單位換算
      select.span2(id="unit-selector",onchange="update_unit()")
        option(ng-repeat="unit in units",value="{{$index}}"){{unit[1]}}
      button.btn(type="button",onclick="update_unit(-1)") 隨便來一個
      button.btn.disabled(data-toggle="modal",onclick='$("#addunit_value_group").removeClass("error");$("#addunit-modal").modal()') 我要加單位
      .modal#addunit-modal.fade(role="dialog",tabindex="-1",aria-labelledby="budget-addunit-label",aria-hidden="true")
        .modal-header
          button.close(type="button",data-dismiss="modal",aria-hidden="true") x
          h3#budget-addunit-label 我要加單位
        .modal-body(style="text-align:center")
          .input-append
            span.add-on 一
            input.input-mini(ng-model="addunit_quantity",type="text",placeholder="量詞,如:個 或 塊")
            input.input-medium(ng-model="addunit_unit",type="text",placeholder="單位,如:蘋果 或 金條")
            span.add-on 等於
            span#addunit-value-group.control-group
              input.span2(ng-model="addunit_value",type="text",placeholder="價錢,如:50 或 2000 (全數字)")
              span.add-on 元
              .alert 價錢欄位必須填入阿拉伯數字
          #budget-addunit-result 
            預覽: 一{{addunit_quantity}}{{addunit_unit}} 等於 {{addunit_value}} 元
        .modal-footer
          button.btn(data-dismiss="modal",aria-hidden="true") 取消
          button.btn.btn-primary(ng-click="addunit()") 送出
  #budget-detail
    #budget-detail-inner
      #budget-detail-info
        h3
          i.icon-big-info-sign(style="margin-top:-3px")
          span#budget-detail-depname-field 教育部
        #budget-detail-amount
          #budget-detail-amount-field1 
            span#budget-detail-amount-field1-value 2,100億
            span#budget-detail-amount-field1-unit 元
          &#x0028;即為
          span#budget-detail-amount-field2 2,100億元
          )
        #budget-detail-category
          屬於
          span#budget-detail-category-field 教育支出
          項目
      hr
      #budget-tagger
        .input-append
          input.span2(ng-model="tagname",size="13",type="text",placeholder="例如: 林益世")
          button.btn(type="button",ng-click="addtag()") 標記相關人士
        #budget-tags
          span.badge(ng-repeat="tag in tags") {{tag}}
      hr
      #budget-vote
        #budget-vote-label
          span.label 透過按一下表達你對於此預算的看法！
        #BudgetItem.btn-toolbar
          .btn-group
            button.btn.vote-btn(ng-click="like()")
              span#vote1 {{nlikes || 0}} 人
              br
              i.icon-big-plus
              br
              希望追加
            button.btn.vote-btn(ng-click="confuse()")
              span#vote2 {{nconfuses || 0}} 人
              br
              i.icon-big-question-sign 
              br
              表示不懂
            button.btn.vote-btn(ng-click="hate()")
              span#vote3 {{nhates || 0}} 人
              br
              i.icon-big-minus
              br
              建議減少
            button.btn.vote-btn.btn-danger(ng-click="cut()")
              span#vote4 {{ncuts || 0}} 人
              br
              i.icon-big-ban-circle
              br
              要求刪除
